<Window x:Class="BBlur.WindowAddImages"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BBlur"
        mc:Ignorable="d"
        Title="WindowAddImages" Height="350" Width="525">
    <Grid Background="#04B4AE">
        <Grid.RowDefinitions>
        <RowDefinition/>
        <RowDefinition Height="3*"/>
    </Grid.RowDefinitions>
        <DockPanel Margin="10,10,10.4,9.8" Grid.RowSpan="2">
            <WrapPanel HorizontalAlignment="Center" DockPanel.Dock="Top" Margin="0,0,0,10">
                <Button Name="btnOpenFile" Click="btnOpenFile_Click">Open Directory</Button>
            </WrapPanel>
            <TextBox Name="txtEditor" Margin="0,0.2,0,241.8" />
        </DockPanel>
    </Grid>
</Window>
